<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Miguel Solans</title>
    <meta name="keywords" id="keywords" content="<%= tags %>">

    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <!-- Bootstrap -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Include Modules -->
    <script data-main="js/main" src="js/external/require.js"></script>
    <!-- Widget Tags -->
    <script type="text/javascript" src="https://platform.linkedin.com/badges/js/profile.js" async defer></script>

</head>
<body>

<div id="carousel-header" class="carousel slide" data-ride="carousel">
    <div id="header-img" class="carousel-inner header"></div>
</div>

    <div class="container-fluid">
        <div class="row">
            <!-- Right Panel -->
            <div class="col-md-9">
                <div class="container">
                    <% for(var i in contents) {
                            if(contents[i].flag === true) {  %>
                                <h2 align="center"><%= contents[i].title %></h2>
                                <%- contents[i].content %>
                            <% }
                    } %>
                </div>
            </div>

            <!-- Left Panel -->
            <div class="col-md-3">
                <div class="side-widget">
					<div class="col d-flex align-items-center justify-content-center" id="profile-picture"></div>
					<h3 class="text-center" id="name"></h3>
					<p id="description"></p>
				</div>
                <div class="side-widget">
                    <h3 class="text-center">Quick Info</h3>

                    <p>Education: </p>
                    <ol class="educations">
                        <% for(var i in education) {%>
                            <li class="education">
                                <span><a target="_blank" href="<%= education[i].link %>"><%= education[i].school %></a> - </span>
                                <span><%= education[i].course %></span>
                            </li>
                        <% } %>
                    </ol>

                    <p>Currently Working On:</p>
                    <ol class="current-jobs">
                        <% for(var i in job) {%>
                            <%if(job[i].flag === true) {%>
                                <li class="job">
                                    <span><a target="_blank" href="<%= job[i].link %>"><%= job[i].company %></a> - </span>
                                    <span><%= job[i].description %></span>
                                </li>
                            <% } %>
                        <% } %>
                    </ol>

                    <p>Used to Work At:</p>
                    <ol class="current-jobs">
                        <% for(var i in job) {%>
                            <%if(job[i].flag === false) {%>
                                <li class="job">
                                    <span><a target="_blank" href="<%= job[i].link %>"><%= job[i].company %></a> - </span>
                                    <span><%= job[i].description %></span>
                                </li>
                            <% } %>
                        <% } %>
                    </ol>
                </div>

                <!-- Custom Widgets -->

                <% for(var i in widgets) { %>
                    <div class="side-widget">
                        <h3 class="text-center"><%= widgets[i].title %></h3>
                        <p align="center"><%= widgets[i].subtitle %></p>
                        <%- widgets[i].content %>
                    </div>
                <% } %>
        </div>
        <div class="row">
            <!--<h2>Pictures I've taken</h2>-->
            <div id="instafeed"></div>
        </div>
        </div>

    </div>
</body>
</html>