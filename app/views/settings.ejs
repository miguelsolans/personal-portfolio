<%- include('partials/header') %>

<div class="container">
    <h1 align="center">Settings</h1>
    <hr>
    <h3>Keywords</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Tags</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i in keyword) {%>
            <tr class="education">
                <td><%= i %></td>
                <td><%= keyword[i].tag %></td>
                <td>
                    <a href="/admin/edit-tag/<%= keyword[i]._id %>">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="/admin/delete-tag/<%= keyword[i]._id %>">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <%- include('partials/forms/new-tag') %>

    <!-- Widget Area -->
    <hr>
    <h3>Widgets</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Title</th>
            <th scope="col">Subtitle</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i in widgets) {%>
            <tr class="education">
                <td><%= i %></td>
                <td><%= widgets[i].title %></td>
                <td><%= widgets[i].subtitle %></td>
                <td>
                    <a href="/admin/edit-widget/<%= widgets[i]._id %>">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </td>
                <td>
                    <a href="/admin/delete-widget/<%= widgets[i]._id %>">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <%- include('partials/forms/new-widget') %>

</div>

<%- include('partials/footer') %>